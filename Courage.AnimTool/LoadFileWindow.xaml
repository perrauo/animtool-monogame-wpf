<Window x:Class="Courage.AnimTool.LoadFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Load File" Height="200" Width="400"
        WindowStartupLocation="CenterOwner">
  <Grid>
    <StackPanel Margin="10">
      <TextBlock Text="Load File" FontWeight="Bold" Margin="0,0,0,10"/>
      <Separator/>
      <TextBlock Text="Select File To Open" Margin="0,10,0,5"/>
      <ComboBox x:Name="FileDropdown" Margin="0,0,0,10">
        <!-- Add ComboBoxItems here -->
        <!--<ComboBoxItem Content="File1.txt"/>
        <ComboBoxItem Content="File2.txt"/>
        <ComboBoxItem Content="File3.txt"/>-->
      </ComboBox>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button x:Name="LoadButton" Content="Load" Width="75" Margin="0,0,10,0"/>
		<Button x:Name="CancelButton" Content="Cancel" Width="75"/>
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>
